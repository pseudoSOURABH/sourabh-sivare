#include<bits/stdc++.h>
using namespace std;

int kadanes(int arr[],int n)
{
    int ans=INT_MIN;
    
    int sum=0;
    
    for(int i=0;i<n;i++)
    {
        sum+=arr[i];
        
        ans=max(ans,sum);
        
        if(sum<0)
        {
            sum=0;
        }
    }
    return ans;
}

int main()
{
    int a[]={-2,1,-3,4,-1,2,1,-5,4};
    int s=sizeof(a)/sizeof(a[0]);
    cout<<kadanes(a,s)<<endl;
    return 0;
}
