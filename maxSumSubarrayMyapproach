#include <bits/stdc++.h>
using namespace std;

int main() {
	int n;
	cin>>n;
	
	int arr[n];
	for(int i=0;i<n;i++)
	{
	    cin>>arr[i];
	}
	
	int ans=INT_MIN;
	int sum=0;
	
	for(int i=0;i<n;i++)
	{
	    
	    if(arr[i]<0)
	    {
	        sum=0;
	        
	    }
	    else{
	        sum+=arr[i];
	        ans=max(ans,sum);
	        
	    }
	}
	cout<<ans<<endl;
	
	
	return 0;
}
