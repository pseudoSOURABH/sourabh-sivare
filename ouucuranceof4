#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int n;
	cin>>n;
	
	for(int i=0;i<n;i++)
	{
	      unsigned  x;
	      cin>>x;
	      
	      int count=0;
	      
	      
	      while(x>1)
	      {
	           if(x%10==4) 
	           count++;
	           
	           x=x/10;
	      }
	      cout<<count<<endl;
	}
	return 0;
}
